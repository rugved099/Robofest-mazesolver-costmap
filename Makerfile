# Compiler and flags
CC = gcc
CFLAGS = -Wall -g

# Object files
OBJS = main.o solver.o API.o queue.o

# Final program name
TARGET = micromouse

# Default rule (build program)
all: $(TARGET)

# Linking step
$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $(TARGET) $(OBJS)

# Compile source files into object files
main.o: main.c solver.h API.h
solver.o: solver.c solver.h queue.h
API.o: API.c API.h
queue.o: queue.c queue.h

# Clean build files
clean:
	rm -f *.o $(TARGET)
